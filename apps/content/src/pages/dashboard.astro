---
import AuthLayout from '../layouts/AuthLayout.astro';
---

<AuthLayout title="Dashboard">
  <div class="mb-10">
    <h2 class="text-4xl font-bold text-white mb-3">
      Dashboard de Apuntes
    </h2>
    <p class="text-neutral-400 text-base">
      Accede a todos tus apuntes premium de programación
    </p>
  </div>

  <!-- Stats Cards - Dark Modern Style -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-10">
    <div class="bg-neutral-900 rounded-lg border border-neutral-800 p-6 hover:border-neutral-700 transition-all">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-neutral-400 mb-1">Total Apuntes</p>
          <p id="total-apuntes" class="text-3xl font-bold text-white">1</p>
        </div>
        <div class="w-12 h-12 rounded-full bg-blue-500/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-neutral-900 rounded-lg border border-neutral-800 p-6 hover:border-neutral-700 transition-all">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-neutral-400 mb-1">Acceso Activo</p>
          <p class="text-3xl font-bold text-green-400">Sí</p>
        </div>
        <div class="w-12 h-12 rounded-full bg-green-500/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-neutral-900 rounded-lg border border-neutral-800 p-6 hover:border-neutral-700 transition-all">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-neutral-400 mb-1">Última Actualización</p>
          <p class="text-3xl font-bold text-white">Hoy</p>
        </div>
        <div class="w-12 h-12 rounded-full bg-purple-500/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Apuntes List -->
  <div class="bg-neutral-900 rounded-lg border border-neutral-800 overflow-hidden">
    <div class="px-6 py-5 border-b border-neutral-800">
      <div class="flex flex-col gap-4">
        <div class="flex items-center justify-between gap-4 flex-wrap">
          <h3 class="text-lg font-semibold text-white">
            Tus Apuntes
          </h3>
          <!-- Buscador -->
          <div class="relative flex-1 max-w-md">
            <input 
              type="text" 
              id="search-input"
              placeholder="Buscar por título, categoría o descripción..."
              class="w-full px-4 py-2 pl-10 text-sm bg-neutral-950 border border-neutral-800 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
            />
            <svg class="absolute left-3 top-2.5 w-4 h-4 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
        
        <!-- Filtros -->
        <div class="flex items-center gap-3 flex-wrap">
          <span class="text-sm font-medium text-neutral-400">Filtrar por:</span>
          
          <!-- Filtro por categoría -->
          <select 
            id="category-filter"
            class="px-3 py-1.5 text-sm bg-neutral-950 border border-neutral-800 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
          >
            <option value="">Todas las categorías</option>
          </select>
          
          <!-- Filtro por cantidad de módulos -->
          <select 
            id="modules-filter"
            class="px-3 py-1.5 text-sm bg-neutral-950 border border-neutral-800 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
          >
            <option value="">Todos los módulos</option>
            <option value="1-3">1-3 módulos</option>
            <option value="4-6">4-6 módulos</option>
            <option value="7+">7+ módulos</option>
          </select>
          
          <!-- Filtro por progreso -->
          <select 
            id="progress-filter"
            class="px-3 py-1.5 text-sm bg-neutral-950 border border-neutral-800 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
          >
            <option value="">Todo el progreso</option>
            <option value="not-started">No iniciado</option>
            <option value="in-progress">En progreso</option>
            <option value="completed">Completado</option>
          </select>
          
          <!-- Botón limpiar filtros -->
          <button 
            id="clear-filters"
            class="px-3 py-1.5 text-sm text-neutral-400 hover:text-white font-medium transition-colors hidden"
          >
            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Limpiar filtros
          </button>
        </div>
      </div>
    </div>
    <div id="apuntes-container" class="p-6">
      <div class="flex items-center justify-center py-16">
        <div class="flex flex-col items-center gap-4">
          <div class="animate-spin rounded-full h-8 w-8 border-2 border-neutral-800 border-t-blue-500"></div>
          <p class="text-sm text-neutral-400">Cargando apuntes...</p>
        </div>
      </div>
    </div>
    <!-- Paginación -->
    <div id="pagination-container" class="hidden px-6 py-4 border-t border-neutral-800 bg-neutral-950">
      <div class="flex items-center justify-between">
        <div class="text-sm text-neutral-400">
          Mostrando <span id="showing-start">1</span> - <span id="showing-end">6</span> de <span id="total-count">0</span> apuntes
        </div>
        <div class="flex items-center gap-2" id="pagination-buttons">
          <!-- Los botones se generarán dinámicamente -->
        </div>
      </div>
    </div>
  </div>
</AuthLayout>

<script>
  const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3001';
  
  let allApuntes: any[] = [];
  let filteredApuntes: any[] = [];
  const ITEMS_PER_PAGE = 6;
  let currentPage = 1;
  let currentFilters = {
    search: '',
    category: '',
    modules: '',
    progress: ''
  };

  async function loadApuntes() {
    try {
      const response = await fetch(`${API_URL}/apuntes/published`, {
        headers: {
          'Authorization': `Bearer ${getCookie('token')}`,
        },
      });

      if (!response.ok) {
        throw new Error('Failed to fetch apuntes');
      }

      allApuntes = await response.json();
      filteredApuntes = [...allApuntes];
      
      const totalElement = document.getElementById('total-apuntes');
      if (totalElement) {
        totalElement.textContent = allApuntes.length.toString();
      }

      populateCategoryFilter();
      renderApuntes();
    } catch (error) {
      console.error('Error loading apuntes:', error);
      showError();
    }
  }

  function renderApuntes() {
    const container = document.getElementById('apuntes-container');
    if (!container) return;

    if (filteredApuntes.length === 0) {
      container.innerHTML = `
        <div class="flex items-center justify-center py-16">
          <div class="text-center max-w-sm">
            <div class="w-16 h-16 rounded-full bg-neutral-800 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-base font-semibold text-white mb-1">Sin resultados</h3>
            <p class="text-sm text-neutral-400">No se encontraron apuntes que coincidan con tu búsqueda</p>
          </div>
        </div>
      `;
      hidePagination();
      return;
    }

    // Calcular paginación
    const totalPages = Math.ceil(filteredApuntes.length / ITEMS_PER_PAGE);
    const startIdx = (currentPage - 1) * ITEMS_PER_PAGE;
    const endIdx = startIdx + ITEMS_PER_PAGE;
    const paginatedApuntes = filteredApuntes.slice(startIdx, endIdx);

    container.innerHTML = `
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        ${paginatedApuntes.map((apunte: any) => {
          let brief = '';
          let modulesCount = 0;
          let lessonsCount = 0;
          
          if (apunte.modules && apunte.modules.length > 0) {
            modulesCount = apunte.modules.length;
            lessonsCount = apunte.modules.reduce((acc: number, mod: any) => 
              acc + (mod.lessons ? mod.lessons.length : 0), 0
            );
            
            const firstModule = apunte.modules[0];
            if (firstModule.lessons && firstModule.lessons.length > 0) {
              brief = firstModule.lessons[0].brief || '';
            }
          }
          
          return `
          <a href="/apuntes/${apunte.id}" class="group block p-5 bg-neutral-900 border border-neutral-800 rounded-lg hover:border-neutral-700 hover:shadow-xl hover:shadow-neutral-900/50 transition-all">
            <div class="flex items-start justify-between mb-3">
              <h5 class="text-base font-semibold text-white group-hover:text-blue-400 transition-colors line-clamp-2 flex-1">${apunte.title}</h5>
              <svg class="w-5 h-5 text-neutral-500 group-hover:text-white transition-colors flex-shrink-0 ml-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
            ${brief ? `
              <p class="text-sm text-neutral-400 line-clamp-2 mb-3">${brief}</p>
            ` : ''}
            <div class="flex items-center gap-3 text-sm text-neutral-400 mb-3">
              <span class="flex items-center gap-1.5">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
                ${modulesCount} ${modulesCount === 1 ? 'módulo' : 'módulos'}
              </span>
              <span class="flex items-center gap-1.5">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                ${lessonsCount} ${lessonsCount === 1 ? 'lección' : 'lecciones'}
              </span>
            </div>
            <div class="flex items-center gap-2">
              ${apunte.category ? `
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-purple-500/10 text-purple-400 border border-purple-500/20">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  ${apunte.category}
                </span>
              ` : ''}
            </div>
          </a>
        `;
        }).join('')}
      </div>
    `;

    if (filteredApuntes.length > ITEMS_PER_PAGE) {
      renderPagination(totalPages);
    } else {
      hidePagination();
    }
  }

  function renderPagination(totalPages: number) {
    const paginationContainer = document.getElementById('pagination-container');
    const buttonsContainer = document.getElementById('pagination-buttons');
    const showingStart = document.getElementById('showing-start');
    const showingEnd = document.getElementById('showing-end');
    const totalCount = document.getElementById('total-count');
    
    if (!paginationContainer || !buttonsContainer) return;
    
    paginationContainer.classList.remove('hidden');
    
    const startIdx = (currentPage - 1) * ITEMS_PER_PAGE + 1;
    const endIdx = Math.min(currentPage * ITEMS_PER_PAGE, filteredApuntes.length);
    
    if (showingStart) showingStart.textContent = startIdx.toString();
    if (showingEnd) showingEnd.textContent = endIdx.toString();
    if (totalCount) totalCount.textContent = filteredApuntes.length.toString();
    
    let buttonsHTML = `
      <button 
        onclick="changePage(${currentPage - 1})"
        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors ${
          currentPage === 1 
            ? 'text-neutral-600 cursor-not-allowed' 
            : 'text-neutral-300 hover:bg-neutral-800 hover:text-white'
        }"
        ${currentPage === 1 ? 'disabled' : ''}
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
    `;
    
    for (let i = 1; i <= totalPages; i++) {
      if (
        i === 1 || 
        i === totalPages || 
        (i >= currentPage - 1 && i <= currentPage + 1)
      ) {
        buttonsHTML += `
          <button 
            onclick="changePage(${i})"
            class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors ${
              i === currentPage 
                ? 'bg-blue-600 text-white' 
                : 'text-neutral-300 hover:bg-neutral-800 hover:text-white'
            }"
          >
            ${i}
          </button>
        `;
      } else if (i === currentPage - 2 || i === currentPage + 2) {
        buttonsHTML += `<span class="px-2 text-neutral-600">...</span>`;
      }
    }
    
    buttonsHTML += `
      <button 
        onclick="changePage(${currentPage + 1})"
        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors ${
          currentPage === totalPages 
            ? 'text-neutral-600 cursor-not-allowed' 
            : 'text-neutral-300 hover:bg-neutral-800 hover:text-white'
        }"
        ${currentPage === totalPages ? 'disabled' : ''}
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    `;
    
    buttonsContainer.innerHTML = buttonsHTML;
  }

  function hidePagination() {
    const paginationContainer = document.getElementById('pagination-container');
    if (paginationContainer) {
      paginationContainer.classList.add('hidden');
    }
  }

  (window as any).changePage = function(page: number) {
    const totalPages = Math.ceil(filteredApuntes.length / ITEMS_PER_PAGE);
    if (page < 1 || page > totalPages) return;
    currentPage = page;
    renderApuntes();
    window.scrollTo({ top: 0, behavior: 'smooth' });
  };

  // Buscador
  const searchInput = document.getElementById('search-input');
  if (searchInput) {
    searchInput.addEventListener('input', (e) => {
      currentFilters.search = (e.target as HTMLInputElement).value.toLowerCase().trim();
      applyFilters();
    });
  }

  // Filtro de categoría
  const categoryFilter = document.getElementById('category-filter');
  if (categoryFilter) {
    categoryFilter.addEventListener('change', (e) => {
      currentFilters.category = (e.target as HTMLSelectElement).value;
      applyFilters();
    });
  }

  // Filtro de módulos
  const modulesFilter = document.getElementById('modules-filter');
  if (modulesFilter) {
    modulesFilter.addEventListener('change', (e) => {
      currentFilters.modules = (e.target as HTMLSelectElement).value;
      applyFilters();
    });
  }

  // Filtro de progreso
  const progressFilter = document.getElementById('progress-filter');
  if (progressFilter) {
    progressFilter.addEventListener('change', (e) => {
      currentFilters.progress = (e.target as HTMLSelectElement).value;
      applyFilters();
    });
  }

  // Botón limpiar filtros
  const clearFiltersBtn = document.getElementById('clear-filters');
  if (clearFiltersBtn) {
    clearFiltersBtn.addEventListener('click', () => {
      currentFilters = { search: '', category: '', modules: '', progress: '' };
      
      if (searchInput) (searchInput as HTMLInputElement).value = '';
      if (categoryFilter) (categoryFilter as HTMLSelectElement).value = '';
      if (modulesFilter) (modulesFilter as HTMLSelectElement).value = '';
      if (progressFilter) (progressFilter as HTMLSelectElement).value = '';
      
      applyFilters();
    });
  }

  function populateCategoryFilter() {
    const categoryFilter = document.getElementById('category-filter');
    if (!categoryFilter) return;
    
    const categories = new Set(allApuntes.map((a: any) => a.category).filter(Boolean));
    const sortedCategories = Array.from(categories).sort();
    
    sortedCategories.forEach((category: any) => {
      const option = document.createElement('option');
      option.value = category;
      option.textContent = category;
      categoryFilter.appendChild(option);
    });
  }

  function applyFilters() {
    filteredApuntes = allApuntes.filter((apunte: any) => {
      // Filtro de búsqueda
      if (currentFilters.search) {
        const titleMatch = apunte.title?.toLowerCase().includes(currentFilters.search);
        const categoryMatch = apunte.category?.toLowerCase().includes(currentFilters.search);
        
        let briefMatch = false;
        if (apunte.modules && apunte.modules.length > 0) {
          const firstModule = apunte.modules[0];
          if (firstModule.lessons && firstModule.lessons.length > 0) {
            const brief = firstModule.lessons[0].brief || '';
            briefMatch = brief.toLowerCase().includes(currentFilters.search);
          }
        }
        
        if (!titleMatch && !categoryMatch && !briefMatch) return false;
      }
      
      // Filtro de categoría
      if (currentFilters.category && apunte.category !== currentFilters.category) {
        return false;
      }
      
      // Filtro de módulos
      if (currentFilters.modules) {
        const modulesCount = apunte.modules?.length || 0;
        if (currentFilters.modules === '1-3' && (modulesCount < 1 || modulesCount > 3)) return false;
        if (currentFilters.modules === '4-6' && (modulesCount < 4 || modulesCount > 6)) return false;
        if (currentFilters.modules === '7+' && modulesCount < 7) return false;
      }
      
      // Filtro de progreso
      if (currentFilters.progress) {
        const progressKey = `course-progress-${apunte.title}`;
        const savedProgress = localStorage.getItem(progressKey);
        const completedLessons = savedProgress ? JSON.parse(savedProgress).length : 0;
        const totalLessons = apunte.modules?.reduce((acc: number, mod: any) => 
          acc + (mod.lessons ? mod.lessons.length : 0), 0) || 0;
        
        if (currentFilters.progress === 'not-started' && completedLessons > 0) return false;
        if (currentFilters.progress === 'in-progress' && (completedLessons === 0 || completedLessons === totalLessons)) return false;
        if (currentFilters.progress === 'completed' && completedLessons !== totalLessons) return false;
      }
      
      return true;
    });
    
    // Mostrar/ocultar botón limpiar filtros
    const clearFiltersBtn = document.getElementById('clear-filters');
    const hasActiveFilters = currentFilters.search || currentFilters.category || currentFilters.modules || currentFilters.progress;
    if (clearFiltersBtn) {
      if (hasActiveFilters) {
        clearFiltersBtn.classList.remove('hidden');
      } else {
        clearFiltersBtn.classList.add('hidden');
      }
    }
    
    currentPage = 1;
    renderApuntes();
  }

  function showError() {
    const container = document.getElementById('apuntes-container');
    if (container) {
      container.innerHTML = `
        <div class="flex items-center justify-center py-16">
          <div class="text-center max-w-sm">
            <div class="w-16 h-16 rounded-full bg-red-500/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-base font-semibold text-white mb-1">Error al cargar</h3>
            <p class="text-sm text-neutral-400">No se pudieron cargar los apuntes. Intenta recargar la página.</p>
          </div>
        </div>
      `;
    }
  }

  function getCookie(name: string) {
    const value = `; ${document.cookie}`;
    const parts = value.split(`; ${name}=`);
    if (parts.length === 2) return parts.pop()?.split(';').shift();
    return '';
  }

  loadApuntes();
</script>
